{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(lldb) Attach",
      "type": "cppdbg",
      "request": "attach",
      "program": "${workspaceFolder}/src/pipex",
      "MIMode": "lldb",
      "processId": "${command:pickProcess}",
      "setupCommands": [
        {
          "description": "Enable pretty printing for gdb",
          "text": "-enable-prety-printing",
          "ignoreFailures": true
        }
      ]
    },
    {
      "name": "Launch",
      "type": "cppdbg",
      "program": "${workspaceFolder}/src/pipex",
      "args": ["targets/test.txt", "grep 2", "wc -w", "hi.txt"],
      "cwd": "${workspaceFolder}",
      "request": "launch",
      "MIMode": "lldb",
      "setupCommands": [
        {
          "description": "Enable pretty printing for gdb",
          "text": "-enable-prety-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
